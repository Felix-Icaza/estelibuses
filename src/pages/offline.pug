extends ../templates/template.pug

block append variables
  - const CURRENT_PAGE = ""
  - const URL = "https://estelibuses.web.app"
  - const ASSETS_PATH = "/"
  - const SERVER_PAGE = true
  - const APPLICATION_NAME = "Estelí Buses"
  - const META_DESCRIPTION = ""
  - const META_ROBOTS = "noindex, nofollow"
  - const LANGUAGE = "es"
  - const CURRENT_URL = URL
  - const SOCIAL_TITLE = ""
  - const SOCIAL_DESCRIPTION = META_DESCRIPTION
  - const SOCIAL_IMAGE = ""
  - const SOCIAL_IMAGE_ALT = SOCIAL_TITLE
  - const OPEN_GRAPH_SITE_NAME = ""
  - const TWITTER_CARD = ""

block append title
  title Sin conexión a internet | Estelí Buses

block append preconnect

block append async-scripts

block append critical-css

block append stylesheets
  link(href=`${ASSETS_PATH}css/style.css` rel="stylesheet")/

block append preload

block append defer-scripts

block append content
  header
    div(class="container mx-auto px-4")
      include ../components/navbar

  section(class="pt-18 pb-26 xs:pb-36 lg:pt-28 lg:pb-34 xl:pb-44 2xl:pb-54 text-center")
    div(class="container mx-auto px-4 space-y-6")
      h1(class="text-4xl sm:text-5xl font-bold max-w-screen-lg mx-auto") No tienes conexión a internet
      p(class="text-base text-black-200 sm:text-lg dark:text-light-700") Por favor vuelve cuánto tengas conexión para visualizar esta página o intenta recargar manualmente si ha sido un poblema temporal.
      button#reload(
        type="button"
        class="rounded font-semibold py-2.5 px-5 transition-colors any-hover:bg-orange-500 active:outline-none active:ring-4 active:ring-orange-400 active:ring-opacity-75 bg-orange-400 text-white shadow-lg shadow-orange-500/30 any-hover:shadow-orange-600/30 active:shadow-orange-600/30"
      ) Recargar página
      section
        style.
          .offline-img {
            width: 380px;
            height: 250px;
          }

          @media (min-width: 992px) {
            .offline-img {
              width: 916px;
              height: 603px;
            }
          }

        picture
          source(type="image/avif" data-srcset="/img/offline.avif")/
          source(type="image/webp" data-srcset="/img/offline.webp")/
          source(type="image/jpeg" data-srcset="/img/offline.jpg")/
          img(
            alt="Imágen Offline"
            class="object-cover object-center rounded mx-auto mt-8 filter saturate-150 lazyload offline-img"
            decoding="async"
            importance="low"
            loading="lazy"
            srcset="data:image/png;base64,"
            data-srcset="/img/offline.jpg"
          )/

  script.
    document.getElementById("reload").addEventListener("click", () => {
      window.location.reload();
    });

    window.addEventListener("online", () => {
      window.location.reload();
    });
