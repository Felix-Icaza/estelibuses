extends ../../../templates/template.pug
include ../../../utils/pageCity
include ../../../utils/cardTransportInfo

block append variables
  - const CURRENT_PAGE = "terminal-sur"
  - const URL = "https://estelibuses.web.app"
  - const ASSETS_PATH = "../../"
  - const HAS_CRITICAL_CSS = false
  - const APPLICATION_NAME = "Esteli Buses"
  - const META_DESCRIPTION = "Conoce todos los horarios de los buses que salen desde Estelí hacia León."
  - const META_ROBOTS = "index, follow"
  - const LANGUAGE = "es"
  - const CURRENT_URL = URL
  - const SOCIAL_TITLE = "Horarios de los Buses de Estelí hacía León"
  - const SOCIAL_DESCRIPTION = META_DESCRIPTION
  - const SOCIAL_IMAGE = ""
  - const SOCIAL_IMAGE_ALT = SOCIAL_TITLE
  - const OPEN_GRAPH_SITE_NAME = ""
  - const TWITTER_CARD = "summary_large_image"

block append title
  title= SOCIAL_TITLE

block append preconnect

block append async-scripts

block append critical-css

block append stylesheets
  link(href=`${ASSETS_PATH}css/style.css` rel="stylesheet")/

block append preload

block append defer-scripts

block append content
  - const hours = ["05:00 am", "06:45 am"]

  +pageCity('León', 'Terminal sur', 'Terminal de León', 'https://www.google.com/maps/embed?pb=!1m28!1m12!1m3!1d498085.3016318051!2d-86.80604487734679!3d12.759577178376983!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m13!3e6!4m5!1s0x8f718c42c00bc1ad%3A0x90de1ab352954a6f!2zRXN0ZWzDrQ!3m2!1d13.0851139!2d-86.3630197!4m5!1s0x8f711f92bb8f7a77%3A0x3ab5c06f64ea313c!2zTGXDs24!3m2!1d12.4342803!2d-86.88052189999999!5e0!3m2!1ses-419!2sni!4v1645377418280!5m2!1ses-419!2sni')
    each hour, index in hours
      +cardTransportInfo(`Horario #${index+1}`, hour, 'Ruteado', '100', '2.30 horas', true, true, true)
