extends ../../../templates/template.pug
include ../../../utils/pageCity
include ../../../utils/cardCity

block append variables
  - const CURRENT_PAGE = "terminal-sur"
  - const URL = "https://estelibuses.web.app"
  - const ASSETS_PATH = "../../"
  - const HAS_CRITICAL_CSS = false
  - const APPLICATION_NAME = "Estelí Buses"
  - const META_DESCRIPTION = "Conoce todos los horarios de los buses que salen desde Estelí hacia La Concepción."
  - const META_ROBOTS = "index, follow"
  - const LANGUAGE = "es"
  - const CURRENT_URL = `${URL}/terminal-sur-esteli/horarios-esteli-la-concepcion`
  - const SOCIAL_TITLE = "Horarios de los Buses de Estelí hacia La Concepción | Estelí Buses"
  - const SOCIAL_DESCRIPTION = META_DESCRIPTION
  - const SOCIAL_IMAGE = ""
  - const SOCIAL_IMAGE_ALT = SOCIAL_TITLE
  - const OPEN_GRAPH_SITE_NAME = ""
  - const TWITTER_CARD = "summary_large_image"

block append title
  title= SOCIAL_TITLE

block append preconnect
  link(crossorigin href="//www.google.com/" rel="preconnect")/
  link(crossorigin href="//maps.googleapis.com/" rel="preconnect")/
  link(crossorigin href="//maps.gstatic.com/" rel="preconnect")/

block append async-scripts

block append critical-css

block append stylesheets
  link(href=`${ASSETS_PATH}css/style.css` rel="stylesheet")/

block append preload

block append defer-scripts
  script(
    type="module"
    src=`${ASSETS_PATH}js/filter-others.js`
    fetchpriority="high"
    importance="high"
  )

block append content
  +pageCity('La Concepción', 'Terminal sur', 'Información no disponible', '15.6 km', 'https://www.google.com/maps/embed?pb=!1m28!1m12!1m3!1d62194.87321985066!2d-86.32744469683918!3d13.024233750202749!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m13!3e6!4m5!1s0x8f718c13825dde4b%3A0x69c6340e0429bb84!2sCotran%20Sur%2C%20Estel%C3%AD!3m2!1d13.0762386!2d-86.3524291!4m5!1s0x8f718831cf76c50f%3A0x6fd4544e018a7956!2zTGEgQ29uY2VwY2nDs24sIEVzdGVsw60!3m2!1d12.999620199999999!2d-86.2660116!5e0!3m2!1ses-419!2sni!4v1650852045183!5m2!1ses-419!2sni')
    section(class="space-y-3 mt-6 lg:mt-0 -mb-8")
      p(class="font-semibold") Elige el bus que deseas abordar:
        form#filter(class="flex flex-col xs:flex-row gap-6")
          section(class="group flex items-center")
            input#city-one(
              name="bus"
              type="radio"
              checked
              class="accent-orange-600 cursor-pointer sibling:checked:text-orange-600"
            )/
            label(
              class="group-any-hover:text-orange-600 transition-colors cursor-pointer"
              for="city-one"
            ) &nbsp;Buses de Managua
          section(class="group flex items-center")
            input#city-two(
              name="bus"
              type="radio"
              class="accent-orange-600 cursor-pointer sibling:checked:text-orange-600"
            )/
            label(
              class="group-any-hover:text-orange-600 transition-colors cursor-pointer"
              for="city-two"
            ) &nbsp;Buses de Matagalpa

    include managua

    include matagalpa

    script.
      const cityOneBuses = document.querySelectorAll(".city-one");
      const cityTwoBuses = document.querySelectorAll(".city-two");

      if (localStorage.getItem("managua_matagalpa_stops") === "managua") {
        document.getElementById("city-one").setAttribute("checked", "true");
        cityOneBuses.forEach(cityOne => cityOne.classList.remove("hidden"));
        cityTwoBuses.forEach(cityTwo => cityTwo.classList.add("hidden"));
      }

      if (localStorage.getItem("managua_matagalpa_stops") === "matagalpa") {
        document.getElementById("city-two").setAttribute("checked", "true");
        cityTwoBuses.forEach(cityTwo => cityTwo.classList.remove("hidden"));
        cityOneBuses.forEach(cityOne => cityOne.classList.add("hidden"));
      }

  article(class="py-12 sm:py-16 md:py-20 xl:py-28 bg-hex-FFFDF9 dark:bg-hex-2D231B")
    div(class="container mx-auto px-4 space-y-12 lg:space-y-16")
      h3(
        class="text-3xl sm:text-4xl font-bold text-center text-hex-3b0d15 dark:text-orange-50"
      ) ¿Buscas conocer otros horarios?
      section
        h4(
          class="text-xl sm:text-2xl font-bold text-center mb-10 lg:mb-16 text-hex-3b0d15 dark:text-orange-50"
        ) Horarios más populares de la Terminal Sur
        article(
          class="flex flex-col gap-y-14 items-center lg:grid lg:grid-cols-2 xl:grid-cols-3 lg:gap-22"
        )
          +cardCity('Managua', 'sur', 'data:image/png;base64,')

          +cardCity('León', 'sur', 'data:image/png;base64,')

          +cardCity('La Trinidad', 'sur', 'data:image/png;base64,')

          +cardCity('San Nicolás', 'sur', 'data:image/png;base64,')

          +cardCity('Tisey - La Estanzuela', 'sur', 'data:image/png;base64,')

          +cardCity('Achuapa', 'sur', 'data:image/png;base64,')

        section(class="text-center mt-20")
          a(
            class="rounded font-semibold space-x-2.5 py-2.5 px-5 transition-colors inline-flex items-center any-hover:bg-orange-500 active:outline-none active:ring-4 active:ring-orange-400 active:ring-opacity-75 bg-orange-400 text-white shadow-lg shadow-orange-500/30 any-hover:shadow-orange-600/30 active:shadow-orange-600/30"
            href="/terminal-sur-esteli"
          )
            span Mira todos los destinos
            span
              svg(class="fill-current" width="26" height="26")
                path(d="M16 11H4v2h12v3l4-4-4-4z")/

      section(class="!mt-24")
        h4(
          class="text-xl sm:text-2xl font-bold text-center mb-10 lg:mb-16 text-hex-3b0d15 dark:text-orange-50"
        ) Horarios más populares de la Terminal Norte
        article(
          class="flex flex-col gap-y-14 items-center lg:grid lg:grid-cols-2 xl:grid-cols-3 lg:gap-22"
        )
          +cardCity('Managua', 'norte', 'data:image/png;base64,')

          +cardCity('Jinotega', 'norte', 'data:image/png;base64,')

          +cardCity('Somoto', 'norte', 'data:image/png;base64,')

          +cardCity('Ocotal', 'norte', 'data:image/png;base64,')

          +cardCity('San Juan de Limay', 'norte', 'data:image/png;base64,')

          +cardCity('Pueblo Nuevo', 'norte', 'data:image/png;base64,')

        section(class="text-center mt-20")
          a(
            class="rounded font-semibold space-x-2.5 py-2.5 px-5 transition-colors inline-flex items-center any-hover:bg-orange-500 active:outline-none active:ring-4 active:ring-orange-400 active:ring-opacity-75 bg-orange-400 text-white shadow-lg shadow-orange-500/30 any-hover:shadow-orange-600/30 active:shadow-orange-600/30"
            href="/terminal-norte-esteli"
          )
            span Mira todos los destinos
            span
              svg(class="fill-current" width="26" height="26")
                path(d="M16 11H4v2h12v3l4-4-4-4z")/
