  - const hours = ["07:00 am", "10:00 am", "12:15 pm", "02:00 pm"]

  +pageCity('San Juan de Limay', 'Terminal norte', 'https://www.google.com/maps/embed?pb=!1m28!1m12!1m3!1d124324.24585486187!2d-86.42219920039288!3d13.154029579437267!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m13!3e6!4m5!1s0x8f718c42c00bc1ad%3A0x90de1ab352954a6f!2zRXN0ZWzDrQ!3m2!1d13.0851139!2d-86.3630197!4m5!1s0x8f71c0680422ae6b%3A0xf61a244cb6ea5b37!2sSan%20Juan%20de%20Limay!3m2!1d13.177742199999999!2d-86.6132317!5e0!3m2!1ses-419!2sni!4v1645375760459!5m2!1ses-419!2sni', 'Terminal de San Juan de Limay')
