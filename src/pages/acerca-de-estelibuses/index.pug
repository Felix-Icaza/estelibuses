extends ../../templates/template.pug

block append variables
  - const CURRENT_PAGE = "acerca"
  - const URL = "https://estelibuses.web.app"
  - const ASSETS_PATH = "../"
  - const HAS_CRITICAL_CSS = false
  - const APPLICATION_NAME = "Estelí Buses"
  - const META_DESCRIPTION = "Conoce sobre Estelí Buses, un proyecto del desarrollador web Félix Icaza."
  - const META_ROBOTS = "index, follow"
  - const LANGUAGE = "es"
  - const CURRENT_URL = `${URL}/acerca-de-estelibuses`
  - const SOCIAL_TITLE = "Acerca de Estelí Buses - Horarios de las Terminales de Estelí"
  - const SOCIAL_DESCRIPTION = META_DESCRIPTION
  - const SOCIAL_IMAGE = ""
  - const SOCIAL_IMAGE_ALT = SOCIAL_TITLE
  - const OPEN_GRAPH_SITE_NAME = ""
  - const TWITTER_CARD = "summary_large_image"

