mixin cardTransportInfoOthers(transport, from, fromTime, to, toTime, time, transportType, transportName, transportID, price, tripTime, transportDestiny, id)
  //- prettier-ignore
  article(class=`space-y-5 bg-light-100 dark:bg-hex-362d25 shadow rounded p-4 any-hover:shadow-md transition-shadow ${id === 'city-two' ? 'hidden' : ''} ${id}`)

    h2(class="titles text-3xl sm:text-4xl font-bold")= transport

    if transportDestiny !== ''
      p(class="!mt-2") Bus que se dirige hacia #{transportDestiny}.

    section(class="pb-2 scrolltable")
      table(class="whitespace-nowrap border-separate")
        tbody
          if from !== ''
            tr(class="group")
              td(
                class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
              )
                svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10 10 10 0 0 0 10-10A10 10 0 0 0 12 2m4.2 14.2L11 13V7h1.5v5.2l4.5 2.7-.8 1.3Z"
                  )/
                strong Hora de salida de #{from}

              td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold")= fromTime

          if to !== ''
            tr(class="group")
              td(
                class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
              )
                svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10 10 10 0 0 0 10-10A10 10 0 0 0 12 2m4.2 14.2L11 13V7h1.5v5.2l4.5 2.7-.8 1.3Z"
                  )/
                strong Hora de salida de #{to}

              td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold")= toTime

          if from === '' && to === ''
            tr(class="group")
              td(
                class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
              )
                svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10 10 10 0 0 0 10-10A10 10 0 0 0 12 2m4.2 14.2L11 13V7h1.5v5.2l4.5 2.7-.8 1.3Z"
                  )/
                strong Hora de salida

              td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold")= time

          tr(class="group")
            td(
              class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
            )
              svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                path(
                  d="M18 11H6V6h12m-1.5 11a1.5 1.5 0 0 1-1.5-1.5 1.5 1.5 0 0 1 1.5-1.5 1.5 1.5 0 0 1 1.5 1.5 1.5 1.5 0 0 1-1.5 1.5m-9 0A1.5 1.5 0 0 1 6 15.5 1.5 1.5 0 0 1 7.5 14 1.5 1.5 0 0 1 9 15.5 1.5 1.5 0 0 1 7.5 17M4 16a3 3 0 0 0 1 2.2V20a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1v-1h8v1a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1v-1.8a3 3 0 0 0 1-2.2V6c0-3.5-3.6-4-8-4s-8 .5-8 4v10Z"
                )/
              strong Tipo de transporte

            td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
              span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold")= transportType

          if transportName !== ''
            tr(class="group")
              td(
                class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
              )
                svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M3 6a2 2 0 0 0-2 2v7h2a3 3 0 0 0 3 3 3 3 0 0 0 3-3h6a3 3 0 0 0 3 3 3 3 0 0 0 3-3h2V8a2 2 0 0 0-2-2H3m-.5 1.5h4V10h-4V7.5m5.5 0h4V10H8V7.5m5.5 0h4V10h-4V7.5m5.5 0h2.5V13L19 11V7.5m-13 6A1.5 1.5 0 0 1 7.5 15 1.5 1.5 0 0 1 6 16.5 1.5 1.5 0 0 1 4.5 15 1.5 1.5 0 0 1 6 13.5m12 0a1.5 1.5 0 0 1 1.5 1.5 1.5 1.5 0 0 1-1.5 1.5 1.5 1.5 0 0 1-1.5-1.5 1.5 1.5 0 0 1 1.5-1.5Z"
                  )/
                strong Nombre del Transporte

              td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold")= transportName

          if transportID !== ''
            tr(class="group")
              td(
                class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
              )
                svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M20 4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h16m-9 9H9v2h2v-2m8 0h-6v2h6v-2M7 9H5v2h2V9m12 0H9v2h10V9Z"
                  )/
                strong Placa del Transporte

              td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold")= transportID

          tr(class="group")
            td(
              class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
            )
              svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                path(
                  d="M11 8a4 4 0 1 1-8 0 4 4 0 0 1 8 0m0 6.7V20H0v-2c0-2.2 3.1-4 7-4 1.5 0 2.9.3 4 .7M24 20H13V3h11v17m-8-8.5a2.5 2.5 0 1 1 5 0 2.5 2.5 0 0 1-5 0M22 7a2 2 0 0 1-2-2h-3a2 2 0 0 1-2 2v9a2 2 0 0 1 2 2h3c0-1.1.9-2 2-2V7Z"
                )/
              strong Precio del pasaje
            td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
              if price === 'Información no disponible'
                span(class="px-2 py-1 text-red-700 bg-red-100 rounded font-bold") #{ price }
              else
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold") C$ #{ price } por persona

          tr(class="group")
            td(
              class="px-3 py-2 flex items-center group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-l"
            )
              svg(class="fill-current mr-2" viewBox="0 0 24 24" width="24" height="24")
                path(
                  d="M16.5 4v4.3l2.9 1.6-.8 1.3L15 9V4h1.5m-.5 9c1.4 0 2.5-.5 3.5-1.5S21 9.4 21 8s-.5-2.5-1.5-3.5S17.4 3 16 3s-2.6.5-3.5 1.5c-1 1-1.5 2.1-1.5 3.5s.5 2.6 1.5 3.5c1 1 2.1 1.5 3.5 1.5m-2.5 6c.4 0 .8-.2 1-.5.4-.3.5-.6.5-1s-.1-.8-.4-1c-.3-.4-.7-.5-1.1-.5-.4 0-.8.1-1 .4-.4.3-.5.7-.5 1.1 0 .4.1.7.4 1 .3.3.7.5 1.1.5M3 13h8.1A6.6 6.6 0 0 1 9 8H3v5m1.5 6c.4 0 .8-.2 1-.5.4-.3.5-.6.5-1s-.1-.8-.4-1c-.3-.4-.7-.5-1.1-.5-.4 0-.8.1-1 .4-.4.3-.5.7-.5 1.1 0 .4.1.7.4 1 .3.3.7.5 1.1.5M16 1c2 0 3.6.7 5 2 1.3 1.4 2 3 2 5a7 7 0 0 1-6 7v3a3 3 0 0 1-1 2.2V22c0 .3-.1.5-.3.7a1 1 0 0 1-.7.3h-1a1 1 0 0 1-.7-.3 1 1 0 0 1-.3-.7v-1H5v1c0 .3 0 .5-.3.7a1 1 0 0 1-.7.3H3a1 1 0 0 1-.7-.3A1 1 0 0 1 2 22v-1.8A3 3 0 0 1 1 18V8c0-1.6.7-2.7 2-3.2A17 17 0 0 1 9 4h1.2c1.4-2 3.4-3 5.8-3Z"
                )/
              strong Duración del viaje
            td(class="px-3 py-2 group-hover:bg-orange-50 dark:group-hover:bg-hex-3E352C transition-colors rounded-r")
              if tripTime === 'Información no disponible'
                span(class="px-2 py-1 text-red-700 bg-red-100 rounded font-bold") #{ tripTime }
              else
                span(class="px-2 py-1 text-green-700 bg-green-100 rounded font-bold") #{ tripTime } (aproximadamente)

    if block
      block
