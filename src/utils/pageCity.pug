include breadcrumb

mixin pageCity(city, terminalName, destiny, distance, map)
  - let cityLowerCase = city.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, "").replace(/\s/g, "-")
  - if (cityLowerCase === 'tisey---la-estanzuela') {
  - cityLowerCase = "tisey-la-estanzuela"
  - }
  - const sanitizeTerminalName = terminalName.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, "").replace(/\s/g, "-")

  header(class="wave" id=cityLowerCase)
    div(class="container mx-auto px-4")
      include ../components/navbar

      section(class="mt-6")
        +breadcrumb(terminalName, city)

      section(
        class="flex flex-col justify-center items-center pt-18 pb-18 md:pb-26 lg:pt-28 lg:pb-34 xl:pb-56 text-center"
      )
        h1(class="text-4xl sm:text-5xl mb-8 max-w-screen-md font-bold") Horarios de los Buses de Estelí hacia #{ city }
        section(class="space-y-2")
          p(class="font-semibold") ¡Comparte este horario en tus redes sociales!
          section(class="flex flex-wrap justify-center items-center gap-8")
            a#whatsapp-city(
              class="any-hover:text-orange-200 active:text-orange-200 transition-colors"
              href=`https://api.whatsapp.com/send?text=%C2%A1Conoce%20todos%20los%20horarios%20de%20los%20buses%20de%20Estel%C3%AD%20hacia%20${city}!%0ahttps://estelibuses.web.app/${sanitizeTerminalName}-esteli/horarios-esteli-${cityLowerCase}?utm_source=whatsapp&utm_medium=webapp&utm_campaign=social_share_city&utm_content=header`
              target="_blank"
            )
              svg(class="fill-current" viewBox="0 0 24 24" width="33" height="33")
                path(
                  d="M12 2a10 10 0 0 0-8.6 14.9L2 22l5.3-1.4A10 10 0 1 0 12 2m0 1.7A8.2 8.2 0 1 1 7.9 19l-.2-.2-3.2.8.9-3-.2-.3a8.3 8.3 0 0 1 7-12.6M8.5 7.3a1 1 0 0 0-.6.3c-.3.3-.9.9-.9 2.1 0 1.2.9 2.4 1 2.6.1.1 1.8 2.6 4.3 3.7.5.3 1 .4 1.4.5.6.2 1 .2 1.5.1.5 0 1.5-.6 1.7-1.2.2-.5.2-1 .1-1.1l-.4-.3-1.7-.8c-.3-.1-.4-.1-.6.1l-.8 1c-.1.1-.3.2-.5 0-.3 0-1-.4-2-1.2a7.6 7.6 0 0 1-1.4-1.7c-.1-.3 0-.4.1-.5l.4-.5.3-.4v-.4l-.8-1.8c-.2-.5-.4-.5-.6-.5h-.5Z"
                )/
            a#telegram-city(
              class="any-hover:text-orange-200 active:text-orange-200 transition-colors"
              href=`https://telegram.me/share/url?url=%C2%A1Conoce%20todos%20los%20horarios%20de%20los%20buses%20de%20Estel%C3%AD%20hacia%20${city}!%0ahttps://estelibuses.web.app/${sanitizeTerminalName}-esteli/horarios-esteli-${cityLowerCase}?utm_source=telegram&utm_medium=webapp&utm_campaign=social_share_city&utm_content=header`
              target="_blank"
            )
              svg(class="fill-current" viewBox="0 0 24 24" width="30" height="30")
                path(
                  clip-rule="evenodd"
                  d="M24 12a12 12 0 1 1-24 0 12 12 0 0 1 24 0ZM12.4 8.9a572 572 0 0 0-7.9 3.6c0 .4.5.5 1 .7l.3.1c.6.2 1.5.5 1.9.5.4 0 .8-.2 1.3-.5a124 124 0 0 1 5.3-3.3v.2c0 .2-1.8 1.8-2.7 2.7l-.5.5-.3.3c-.6.5-1 1 0 1.6a94.2 94.2 0 0 1 2.7 1.8l.4.3c.5.4 1 .7 1.5.6.3 0 .6-.3.8-1.2a142.2 142.2 0 0 0 1.3-9.1l-.1-.3a.8.8 0 0 0-.5-.2c-.4 0-1.1.3-4.5 1.7Z"
                  fill-rule="evenodd"
                )/
            a(
              class="any-hover:text-orange-200 active:text-orange-200 transition-colors"
              href=`https://www.facebook.com/sharer/sharer.php?u=https://estelibuses.web.app/${sanitizeTerminalName}-esteli/horarios-esteli-${cityLowerCase}?utm_source=facebook&utm_medium=webapp&utm_campaign=social_share_city&utm_content=header`
              target="_blank"
            )
              svg(class="fill-current" viewBox="0 0 24 24" width="36" height="36")
                path(
                  d="M12 2.04a10.03 10.03 0 0 0-1.56 19.92v-7H7.9v-2.9h2.54V9.85c0-2.51 1.49-3.89 3.78-3.89 1.09 0 2.23.19 2.23.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 0 0 8.44-9.9c0-5.53-4.5-10.02-10-10.02Z"
                )/
            a(
              class="any-hover:text-orange-200 active:text-orange-200 transition-colors"
              href=`https://twitter.com/intent/tweet?url=https://estelibuses.web.app/${sanitizeTerminalName}-esteli/horarios-esteli-${cityLowerCase}?utm_source=twitter&utm_medium=webapp&utm_campaign=social_share_city&utm_content=header&text=%C2%A1Conoce%20todos%20los%20horarios%20de%20los%20buses%20de%20Estel%C3%AD%20hacia%20${city}!`
              target="_blank"
            )
              svg(class="fill-current" viewBox="0 0 24 24" width="33" height="33")
                path(
                  d="M22.5 6c-.8.3-1.6.6-2.5.7.9-.5 1.6-1.4 1.9-2.4-.8.5-1.8.9-2.7 1a4.3 4.3 0 0 0-7.3 4C8.2 9 5 7.3 3 4.8a4.2 4.2 0 0 0 1.3 5.7c-.7 0-1.3-.2-2-.5 0 2.1 1.6 3.8 3.5 4.2a4.2 4.2 0 0 1-2 .1c.6 1.7 2.2 3 4 3A8.5 8.5 0 0 1 1.6 19c2 1.2 4.2 1.9 6.6 1.9 7.9 0 12.2-6.5 12.2-12.2v-.6C21.2 7.6 22 7 22.5 6Z"
                )/
            button#share-city(
              type="button"
              class="any-hover:text-orange-200 active:text-orange-200 transition-colors hidden"
            )
              svg(class="fill-current" viewBox="0 0 24 24" width="33" height="33")
                path(
                  d="M18 16a3 3 0 0 0-2 .9l-7-4.2v-1.4l7-4.1a3 3 0 0 0 2 .8 3 3 0 0 0 3-3 3 3 0 0 0-3-3 3 3 0 0 0-3 3v.7L8 9.8A3 3 0 0 0 6 9a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 2-.8l7.2 4.1-.1.7a3 3 0 0 0 5.8 0 3 3 0 0 0-2.9-3Z"
                )/

  section(class="py-12 sm:py-16 md:py-20 xl:py-28")
    div(
      class="container mx-auto px-4 flex flex-col gap-16 lg:grid lg:grid-cols-2 lg:items-start"
    )
      section(class="flex flex-col gap-16 lg:sticky lg:top-8 order-1 lg:order-0")
        if block
          block

      section(class="space-y-5 lg:sticky lg:top-8 order-0 lg:order-1")
        section
          if map === 'Información no disponible'
            section(
              class="rounded w-full flex items-center justify-center"
              style="background: #eee; height: 450px"
            )
              p(class="text-lg") Vista previa de mapa no disponible
          else
            iframe(
              src=map
              class="rounded w-full"
              loading="lazy"
              style="border: 0; background: #eee"
              height="450"
            )
            p(class="text-xs mt-3") Previsualización de mapa proporcionada por Google Maps.
        article(class="flex flex-col gap-8 md:flex-row")
          section(class="space-y-2")
            p(class="font-bold") Lugar de destino:
            section(class="flex items-center gap-2")
              div
                svg(class="fill-current" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M12 11.5A2.5 2.5 0 0 1 9.5 9 2.5 2.5 0 0 1 12 6.5 2.5 2.5 0 0 1 14.5 9a2.5 2.5 0 0 1-2.5 2.5M12 2a7 7 0 0 0-7 7c0 5.3 7 13 7 13s7-7.8 7-13a7 7 0 0 0-7-7Z"
                  )/
              p(class="font-bold")= destiny
          section(class="space-y-2")
            p(class="font-bold") Distancia de viaje:
            section(class="flex items-center gap-2")
              div
                svg(class="fill-current" viewBox="0 0 24 24" width="24" height="24")
                  path(
                    d="M6.5 8.1c-.9 0-1.6-.7-1.6-1.6a1.6 1.6 0 0 1 1.6-1.6c.9 0 1.6.7 1.6 1.6a1.6 1.6 0 0 1-1.6 1.6m0-6.1C4 2 2 4 2 6.5c0 3.4 4.5 8.4 4.5 8.4s4.5-5 4.5-8.4C11 4 9 2 6.5 2m11 6.1a1.6 1.6 0 0 1-1.6-1.6 1.6 1.6 0 1 1 3.2 0 1.6 1.6 0 0 1-1.6 1.6m0-6.1C15 2 13 4 13 6.5c0 3.4 4.5 8.4 4.5 8.4s4.5-5 4.5-8.4C22 4 20 2 17.5 2m0 14a3 3 0 0 0-2.8 2H9.3a3 3 0 1 0 0 2h5.4a3 3 0 1 0 2.8-4m0 4.5A1.5 1.5 0 0 1 16 19a1.5 1.5 0 0 1 1.5-1.5A1.5 1.5 0 0 1 19 19a1.5 1.5 0 0 1-1.5 1.5Z"
                  )/
              if distance === 'Información no disponible'
                p(class="font-bold") #{ distance }
              else
                p(class="font-bold") #{ distance } (aproximadamente)
