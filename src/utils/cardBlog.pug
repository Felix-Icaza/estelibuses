mixin cardBlog(title, date, description, href)
  section(class="bg-white shadow rounded p-4 max-w-lg")
    a(href=href)
      h3(
        class="mb-1 text-2xl font-bold any-hover:text-orange-500 transition-colors active:text-orange-500"
      )= title
    p(class="mb-4 text-xs font-semibold text-gray-400 uppercase")= date
    p(class="text-gray-700 mb-5 text-base")= description
    a(
      class="rounded font-semibold py-2.5 transition-colors text-orange-500 duration-300 any-hover:text-orange-600 focus:outline-none"
      href=href
    )
