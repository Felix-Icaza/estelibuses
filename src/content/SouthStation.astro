---
import CardCity from '@components/CardCity.astro'

import southernStation from '../data/southern-station.json'

const cities = southernStation.cities
---

<article
  class="py-12 sm:py-16 md:py-20 xl:py-28 bg-[#FFFDF9] dark:bg-[#2D231B]"
>
  <div class="container mx-auto px-4">
    <section class="space-y-6 mb-10 lg:mb-16 lg:text-center">
      <h2
        class="text-3xl sm:text-4xl font-bold text-center text-[#3b0d15] dark:text-orange-50"
      >
        Destinos populares de la terminal sur
      </h2>
      <p class="mx-auto mt-5 text-center md:max-w-5xl lg:max-w-6xl">
        Elige la ciudad para ver los horarios de los destinos m√°s populares de
        la terminal sur.
      </p>
    </section>
    <article
      class="flex flex-col gap-y-14 items-center lg:grid lg:grid-cols-2 xl:grid-cols-3 lg:gap-22"
    >
      {
        cities.map(
          (city, index) =>
            index < 6 && (
              <CardCity
                cityName={city.name}
                slug={city.slug}
                imagen={city.image}
                lqip={city.lqip}
              />
            )
        )
      }
    </article>
  </div>
</article>
